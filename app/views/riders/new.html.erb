<%= form_with scope: :rider, url: riders_path, local: true do |form| %>
  <p>
    <%= form.label :name %><br>
    <%= form.text_field :name %>
  </p>
 
  <p>
    <%= form.label :email %><br>
    <%= form.text_area :email %>
  </p>
  
  <p>
    <%= form.label :dob %><br>
    <%= form.text_area :dob %>
  </p>
  
  <p>
    <%= form.submit %>
  </p>
<% end %>