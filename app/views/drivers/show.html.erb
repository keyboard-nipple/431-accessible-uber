<div class="container">
  <div class="col-sm text-center">
    <h1 class="display-4">Hello, <%= @driver.name %></h1>
    <div>Here's the information we have on file from you:</div>
    
    <table class="table">
      <thead>
        <tr>
          <th scope="col"></th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th scope="row"></th>
          <td>Name</td>
          <td><%= @driver.name %></td>
        </tr>
        <tr>
          <th scope="row"></th>
          <td>E-mail Address</td>
          <td><%= @driver.email %></td>
        </tr>
        <tr>
          <th scope="row"></th>
          <td>License Number</td>
          <td><%= @driver.license %></td>
        </tr>
        <tr>
          <th scope="row"></th>
          <td>Date of Birth</td>
          <td><%= @driver.dob %></td>
        </tr>   
      </tbody>
    </table>
    
    <h2>Certifications</h2>
    <% @driver.certifications.each do |certification| %>
      <p>
        <strong>Description:</strong>
        <%= certification.name %>
      </p>
      <p>
        <strong>Date:</strong>
        <%= certification.created_at %>
      </p>
     
      <p>
        <strong>Image:</strong>
        <% if certification.image.attached? %>
          <%= image_tag(certification.image, height: 200, width:200 ) %>
        <% end %>
      </p>
    <% end %>
    <%= link_to "Update Profile", edit_driver_path(@driver), :class => "btn btn-primary" %>
  </div>
</div>