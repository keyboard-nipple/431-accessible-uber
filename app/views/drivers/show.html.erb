<div class="container">
  <div class="col-sm text-center">
    <h1 class="display-4">Hello, <%= @driver.name %></h1>
    <div>Here's the information we have on file from you:</div>
    
    <table class="table">
      <thead>
        <tr>
          <th scope="col"></th>
          <th scope="col"></th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th scope="row"></th>
          <td>Name</td>
          <td><%= @driver.name %></td>
        </tr>
        <tr>
          <th scope="row"></th>
          <td>E-mail Address</td>
          <td><%= @driver.email %></td>
        </tr>
        <tr>
          <th scope="row"></th>
          <td>License Number</td>
          <td><%= @driver.license %></td>
        </tr>
        <tr>
          <th scope="row"></th>
          <td>Date of Birth</td>
          <td><%= @driver.dob %></td>
        </tr>
        <tr>
          <th scope="row"></th>
          <td> Certifications </td>
          <td> 
          <!-- app/views/posts/show.html.erb -->
        <% if @driver.certification.attached? %>
        <!-- @post.image.present? will always return true, use attached? to check presence -->
        <p>
          <strong>Image:</strong>
          <br>
          <%= url_for(@driver.certification) %>
          </p>
          <% end %>
          </td>
        </tr>
        <td><%= link_to 'Edit', edit_driver_path(@driver) %></td>
      </tbody>
    </table>
  </div>
</div>